{
	"name": "phpgt/fetch",
	"description": "Asynchronous HTTP client with promises for PHP 7 applications.",
	"type": "library",
	"license": "MIT",

	"provide": {
		"php-http/client-implementation": "1.0",
		"php-http/async-client-implementation": "1.0"
	},

	"require": {
		"php": ">=7.4",
		"ext-curl": "*",
		"ext-json": "*",
		"phpgt/http": "*",
		"phpgt/curl": "*",
		"php-http/httplug": "^2.0"
	},

	"require-dev": {
		"phpunit/phpunit": "9.*"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Fetch\\": "./src"
		},
		"files": [
			"./src/functions.php"
		]
	},

	"autoload-dev": {
		"psr-4": {
			"Gt\\Fetch\\Test\\": "./test/phpunit"
		}
	},

	"authors": [
		{
			"name": "Greg Bowler",
			"email": "greg.bowler@g105b.com"
		}
	],

	"keywords": [
		"http",
		"fetch",
		"async",
		"asynchronous",
		"xmlhttprequest",
		"ajax",
		"get",
		"post",
		"curl",
		"curl_multi"
	]
}
